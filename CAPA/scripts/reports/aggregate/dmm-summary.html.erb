<div class="menu">
  <table>
    <tr>
      <td>
        <div class="menu_item">
          <%= @controller.linkToObject("CSV", @otrunkHelper.rootObject.reportTemplate, $csv_view) %>
        </div>
      </td>
      <td>
        <div class="menu_item">
          <%= @controller.linkToObject("Rubric", @otrunkHelper.rootObject.reportTemplate, $rubric_view) %>
        </div>
      </td>
    </tr>
  </table>
</div>

<% magenta = '#a030a0' %>

<% rubrics = [] %>
<% rubrics[0] = $rubric.getVoltageRubric %>
<% rubrics[1] = $rubric.getCurrentRubric %>
<% rubrics[2] = $rubric.getResistanceRubric %>

<% indicatorMap = {} %>
<% indicators = rubrics[0].getIndicators.getVector %>
<% for indicator in indicators %>
  <% indicatorMap[indicator.getName] = indicator %>
<% end %>

<% v_scores = { :lead => [], :circuit => [], :points => [] } %>
<% c_scores = { :lead => [], :circuit => [], :points => [] } %>
<% r_scores = { :lead => [], :circuit => [], :points => [] } %>
<% scores = [v_scores, c_scores, r_scores] %>
<% totalPointsList = [] %>
<% timeList = [] %>
<% blowupsList = [] %>

<h3><%= $title.getText %></h3>

<p>
Class: <font color="#3030f0"> <%= @otrunkHelper.className %> </font><br/>
Teacher: <font color="#3030f0"> <%= @otrunkHelper.teacherName %> </font>
</p> 

<table class="a">
  <tr class="a">
    <td class="a" rowspan="2"></td>
    <td class="a" colspan="3">Voltage</td>
    <td class="a" colspan="3">Current</td>
    <td class="a" colspan="3">Resistance</td>
	<td class="a" rowspan="2">Final Grade<br/>(100)</td>
	<td class="a" rowspan="2">Total Time (s)</td>
	<td class="a" rowspan="2">Blown Meters</td>
  </tr>
  <tr class="a">
    <td class="a">Leads</td>
    <td class="a">Circuit</td>
    <td class="a">Score<br/>(<%= @assessment.getMaxPoints(rubrics[0]) %>)</td>
    <td class="a">Leads</td>
    <td class="a">Circuit</td>
    <td class="a">Score<br/>(<%= @assessment.getMaxPoints(rubrics[1]) %>)</td>
    <td class="a">Leads</td>
    <td class="a">Circuit</td>
    <td class="a">Score<br/>(<%= @assessment.getMaxPoints(rubrics[2]) %>)</td>
  </tr>
  <% for user in @otrunkHelper.users %>
    <% multimeterAssessment = getLastMultimeterAssessment(user) %>
    <% if multimeterAssessment == nil %>
      <% $stderr.puts("Assessment not present for user [#{user.getName}]") %> 
      <% next %>
    <% end %>
    <% assessments = multimeterAssessment.getAnswers.getVector %>
    <% if assessments == nil or assessments.length == 0 %>
      <% $stderr.puts("Assessment not present for user [#{user.getName}]") %> 
      <% next %>
    <% end %> 
    <% total_time = 0 %>
    <% total_blowups = 0 %>
    <tr class="a">
      <td class="a"><%= user.getName %></td>
      <% assessments.size.times do |i| %>
      	<% assessment = assessments[i] %>
      	<% rubric = rubrics[i] %>
      	<% indicatorValues = assessment.getIndicatorValues %>
	    <% points = RubricGradeUtil.getTotalGrade(assessment, rubric).getPoints %>
		<% total_time += indicatorValues.get('time').to_f %>
		<% total_blowups += indicatorValues.get('brokenDMM').to_i %>
		<% leadInd = indicatorValues.get('leadPlacement').to_i %>
		<% scores[i][:lead] << (leadInd > 1 ? 1 : 0) %>
		<% circuitInd = indicatorValues.get('circuitSetting').to_i %>
		<% scores[i][:circuit] << (circuitInd > 0 ? 1 : 0) %>
		<% scores[i][:points] << points %>
			
		<td class="a"><%= @assessment.getIndicatorLabel(indicatorMap['leadPlacement'], assessment, rubric) %></td>
		<td class="a"><%= @assessment.getIndicatorLabel(indicatorMap['circuitSetting'], assessment, rubric) %></td>
		<td class="a"><%= points %></td>
      <% end %>
      
	  <% totalPoints = OTMultimeterAsessmentGradeUtil.getTotalGrade(multimeterAssessment, $rubric).getPoints %>
	  <% totalPointsList << totalPoints %>
	  <% timeList << total_time %>
	  <% blowupsList << total_blowups %>
	
	  <td class="a"><font color="#3030f0"><%= totalPoints %></font></td>
	  <td class="a"><%= '%.0f' % total_time %></td>
	  <td class="a"><%= total_blowups %></td>
    </tr>
  <% end %>
      
  <tr class="a">
	<td class="a"><font color="<%= magenta %>">Average</font></td>
	<!-- Voltage -->
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % (Util.avg(scores[0][:lead]) * 100) %>%</font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % (Util.avg(scores[0][:circuit]) * 100) %>%</font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(scores[0][:points]) %></font></td>
	<!-- Current -->	  
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % (Util.avg(scores[1][:lead]) * 100) %>%</font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % (Util.avg(scores[1][:circuit]) * 100) %>%</font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(scores[1][:points]) %></font></td>
	<!-- Resistance -->	  
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % (Util.avg(scores[2][:lead]) * 100) %>%</font></td>
	<td class="a"><font color="                                 <%= magenta %>"><%= '%.0f' % (Util.avg(scores[2][:circuit]) * 100) %>%</font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(scores[2][:points]) %></font></td>	  
	  
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(totalPointsList) %></font></td>
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(timeList) %></font></td>	  	  
	<td class="a"><font color="<%= magenta %>"><%= '%.0f' % Util.avg(blowupsList) %></font></td>	  
  </tr>
</table> 

